<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.title %>" />
    </div>

    <button type="Submit">Search</button>
</form>
<br />
<% authors.forEach((author)=>{%>
<div><%= author.name %></div>
<div class="btn-row">
    <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
    <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
    <%- include('../partials/deleteForm',{url:author.id,dest:"authors"}) %> <% }) %>
</div>
